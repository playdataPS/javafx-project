<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="370.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.view.LoginController">
   <children>
      <VBox prefHeight="400.0" prefWidth="370.0">
         <children>
            <Pane prefHeight="90.0" prefWidth="200.0" />
            <HBox prefHeight="80.0" prefWidth="200.0">
               <children>
                  <Pane prefHeight="200.0" prefWidth="90.0" />
                  <Label prefWidth="200.0" text="닉네임 입력" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                     <padding>
                        <Insets left="5.0" top="30.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Pane prefHeight="70.0" prefWidth="90.0" />
                  <TextField fx:id="nicknameTextField" prefHeight="30.0" prefWidth="200.0" promptText="내용을 입력해주세요" />
               </children>
            </HBox>
            <Label fx:id="noticeLabel" text="* 이미 사용중인 닉네임입니다." textAlignment="CENTER" textFill="#ff7891">
               <padding>
                  <Insets left="100.0" />
               </padding>
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Pane prefHeight="200.0" prefWidth="140.0" />
                  <Button fx:id="startButton" mnemonicParsing="false" onAction="#gameStart" text="게임 시작">
                     <HBox.margin>
                        <Insets top="40.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
